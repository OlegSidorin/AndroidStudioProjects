<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#3574DD"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/myTtextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Привет!!"
        android:textColor="#2D27A0"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/myButton"
        android:layout_width="101dp"
        android:layout_height="115dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="#CDDC39"
        android:soundEffectsEnabled="true"
        android:text="Нажми"
        android:textColor="#E91E63"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/myTtextView"
        app:layout_constraintEnd_toEndOf="@+id/myTtextView"
        app:layout_constraintStart_toStartOf="@+id/myTtextView"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>